<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name>project1</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
	<welcome-file>homepage.html</welcome-file>
  </welcome-file-list>
  <servlet>
	  <display-name>MasterServlet</display-name>
	  <servlet-name>MasterServlet</servlet-name>
	  <servlet-class>com.revature.web.MasterServlet</servlet-class>
  </servlet>
  
  <servlet>
	  <display-name>LoginServlet</display-name>
	  <servlet-name>LoginServlet</servlet-name>
	  <servlet-class>com.revature.web.LoginServlet</servlet-class>
  </servlet>
  <servlet>
	  <display-name>LogoutServlet</display-name>
	  <servlet-name>LogoutServlet</servlet-name>
	  <servlet-class>com.revature.web.LogoutServlet</servlet-class>
  </servlet>
  <servlet>
	  <display-name>HomeServlet</display-name>
	  <servlet-name>HomeServlet</servlet-name>
	  <servlet-class>com.revature.web.HomeServlet</servlet-class>
  </servlet>
  <servlet>
	  <display-name>AddTicketServlet</display-name>
	  <servlet-name>AddTicketServlet</servlet-name>
	  <servlet-class>com.revature.web.AddTicketServlet</servlet-class>
  </servlet>
   <servlet>
	  <display-name>ViewTicketServlet</display-name>
	  <servlet-name>ViewTicketServlet</servlet-name>
	  <servlet-class>com.revature.web.ViewTicketServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  		<servlet-name>MasterServlet</servlet-name>
  		<url-pattern>/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  		<servlet-name>LoginServlet</servlet-name>
  		<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  		<servlet-name>LogoutServlet</servlet-name>
  		<url-pattern>/logout</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
  		<servlet-name>HomeServlet</servlet-name>
  		<url-pattern>/home</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  		<servlet-name>AddTicketServlet</servlet-name>
  		<url-pattern>/add</url-pattern>
  </servlet-mapping>
   <servlet-mapping>
  		<servlet-name>ViewTicketServlet</servlet-name>
  		<url-pattern>/view</url-pattern>
  </servlet-mapping>
</web-app>